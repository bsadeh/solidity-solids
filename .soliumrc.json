{
  "extends": "solium:recommended",
  "plugins": ["security"],
  "rules": {
    "variable-declarations": "error",
    "indentation": 0,
    "operator-whitespace": 0,
    "quotes": ["error", "double"],
    "whitespace": 0,
    "security/max-statements-in-func": "warning",
    "security/no-inline-assembly": 0,
    "security/no-send": "warning",
    "security/no-suicide-or-selfdestruct": "error",
    "security/no-var": "warning"
  }
}
